<body>
    <p class="main-title"><%= title %></p>
    <form action="/taroinu" method="post">
        <label for="name2">名前：</label>
        <input type="text" name="name2" id="name">
        <label for="pass">パスワード：</label>
        <input type="password" name="pass" id="pass">
        <input type="hidden" name="gazou" id="g1">
        <input type="file" onchange="onInputChanged(event)">
        <img id="previewLarge" style="display:none">
        <hr>アイコンサンプル:<br>
        <img id="previewSmall">

        <script>
            function onInputChanged(e) {
                var file = e.target.files && e.target.files[0];
                if (file === null) {
                    return;
                }
                URL.revokeObjectURL(previewLarge.src);
                previewLarge.src = URL.createObjectURL(file);
            }
            previewLarge.onload = function(e) {
                // 画像データの縦横サイズを取得する
                var image = previewLarge;
                var width = image.naturalWidth;
                var height = image.naturalHeight;
                // 縮小
                var canvas = document.createElement('canvas');
                canvas.width = 50;
                canvas.height = 50;
                canvas.getContext("2d").drawImage(image, 0, 0, 50, 50);
                previewSmall.src = canvas.toDataURL();
                g1.value = canvas.toDataURL();
            }
        </script>
        <input type="submit" id="test" value="入村する">
    </form>

